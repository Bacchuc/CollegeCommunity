<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.mursaat.extendedtextview.AnimatedGradientTextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Task"
            app:colors="@array/center_title_colors"
            app:simultaneousColors="2"
            app:angle="45"
            app:speed="1000"
            android:textSize="@dimen/activity_title_center_size"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@+id/rl_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/view_up">
    </View>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ib_head_picture"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_up"
        android:layout_marginTop="15dp"
        android:src="@drawable/head1"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/transparent"
        />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textColor="@color/colorLightOrange"
        android:textSize="16dp"
        android:layout_below="@+id/ib_head_picture"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@+id/tv_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/view_up2">
    </View>

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/view_up2">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18dp"
            android:textColor="@color/colorGray"
            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/iv_username"
            />

        <EditText
            android:id="@+id/iv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bacchus"
            android:textSize="20dp"
            android:background="@null"
            android:gravity="top|center"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_username">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"
            android:textColor="@color/colorGray"
            android:layout_toRightOf="@+id/iv_task_picture"
            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/iv_email"
            />

        <EditText
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="673482245"
            android:textSize="20dp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="top|center"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_school"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_email">

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University"
            android:textSize="18dp"
            android:textColor="@color/colorGray"
            android:layout_toRightOf="@+id/iv_task_picture"
            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/iv_school"
            />

        <EditText
            android:id="@+id/iv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="TIT"
            android:textSize="20dp"
            android:background="@null"
            android:gravity="top|center"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@color/colorLightOrange"
        android:textSize="16dp"
        android:layout_below="@+id/rl_school"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@+id/tv_change_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/view_up3">
    </View>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/view_up3">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="18dp"
            android:textColor="@color/colorGray"
            android:layout_toRightOf="@+id/iv_task_picture"
            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/iv_password"
            />

        <EditText
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="......"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:background="@null"
            android:gravity="top|center"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/semi_round_backgroud"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
