<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ib_head_picture"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/head1"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/transparent"
        >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bacchus"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/ib_head_picture"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
    />

    <Button
        android:id="@+id/bt_contact"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="contact"
        android:textSize="15dp"
        android:textColor="@color/colorOrange"
        android:background="@drawable/semi_round_hollow_background"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_image"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/ib_head_picture"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
